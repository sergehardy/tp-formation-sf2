{% extends "base.html.twig" %}
{% block content %}
<table class="table table-bordered" >
	<thead>
		<tr>
			<th>Note</th>
			<th>Commentaire</th>
			<th>Campagne</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
	{% for note in notes %}
	<tr>
		<td>{{ note.note }}</td>
		<td>{{ note.commentaire }}</td>
		<td>{{ note.campaign }}</td>
		<td><a href="{{ path('note_edit',{ "id": note.id} ) }}">Modifier</a></td>
	</tr>
	{% endfor %}
	</tbody>
</table>
{% endblock %}